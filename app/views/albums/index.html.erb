<h1>Listing albums</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%=h album.name %></td>
    <td><%=h album.description %></td>
    <td><%= link_to 'Show', user_album_url(album.user, album) %></td>
    <td><%= link_to 'Edit', edit_user_album_url(album.user, album) %></td>
    <td><%= link_to 'Destroy', [album.user, album], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New album', new_user_album_url(@user) %>
